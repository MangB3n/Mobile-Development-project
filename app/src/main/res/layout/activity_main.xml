<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/house2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/Text"
        android:layout_width="160dp"
        android:layout_height="38dp"
        android:layout_marginTop="85dp"
        android:gravity="center_horizontal"
        android:text="O R E A P P S"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:textColor="@color/white"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="8dp"
        android:textColorHint="@color/Charcoal"/>

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:drawableLeft="@drawable/baseline_lock_24"
        android:textSize="13sp"
        android:drawablePadding="10dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="8dp"
        android:textColorHint="@color/Charcoal" />


    <RelativeLayout
        android:layout_width="399dp"
        android:layout_height="36dp"
        android:layout_marginTop="5dp">

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:shadowColor="@color/Charcoal"
            android:text="Remember me"
            android:textColor="@color/Charcoal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:text="Forgot Password"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/red"
            android:layout_marginRight="10dp"/>



</RelativeLayout>


    <Button
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:text="Login"
        android:textColor="@color/blue"
        app:cornerRadius="60dp"
        android:textSize="18sp"
        android:textColorHighlight="@color/cardview_dark_background"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="or"
        android:textColor="@color/white"
        android:id="@+id/or"
        android:layout_marginTop="10dp"
        android:drawableStart="@drawable/baseline_horizontal_rule_24"
        android:drawableEnd="@drawable/baseline_horizontal_rule_24" />


    <Button
        android:id="@+id/facebookButton"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/denim"
        android:drawableLeft="@drawable/facebook"
        android:drawablePadding="8dp"
        android:text="facebook"
        android:textAlignment="center"
        android:textSize="20sp"
        app:cornerRadius="20dp" />

    <Button
        android:id="@+id/gmailButton"
        android:layout_width="198dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/denim"
        android:drawableLeft="@drawable/gmail"
        android:drawablePadding="8dp"
        android:text="Gmail"
        android:textSize="20sp"
        android:textAlignment="center"
        app:cornerRadius="20dp" />


    <RelativeLayout
        android:layout_width="350dp"
        android:layout_height="29dp"
        android:layout_marginTop="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:layout_marginStart="91dp"
            android:text="No Account?"
            android:textColor="@color/Charcoal" />

        <TextView
            android:id="@+id/Signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="106dp"
            android:gravity="center"

            android:text="  SignUp"
            android:textColor="@color/red" />

    </RelativeLayout>

</LinearLayout>